	</ciManagement>
	
	<issueManagement>
		<system>Jira</system>
		<url>http://powerplant.nature.com/jira/browse/${issues.context.name}</url>
	</issueManagement>
	
	<organization>
		<name>Nature Publishing Group</name>
		<url>http://nature.com/</url>
